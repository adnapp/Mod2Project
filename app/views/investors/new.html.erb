<div>
<h1 class="title">CREATE AN ACCOUNT</h1>
  <% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>

<%= form_for @investor do |f| %>
  <h4><%= f.label :name %></h4>
  <%= f.text_field :name, autocomplete: "off" %>
  <br>
  <br>
  <h4><%= f.label :username %></h4>
  <%= f.text_field :username, autocomplete: "off"%>
  <br>
  <br>
  <h4><%= f.label :password %></h4>
  <%= f.password_field :password, autocomplete: "off" %>
  <br>
  <br>
  <h4><%= f.label :bio %></h4>
  <%= f.text_area :bio, size: "20x6", autocomplete: "off"  %>
  <br>
  <br>
  <%= f.submit "Create Account"%>
  <% end %>
  <br>
  </div>

  