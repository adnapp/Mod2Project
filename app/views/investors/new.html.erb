<h2>Create An Account</h2>

  <% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>

<%= form_for @investor do |f| %>
  <h5><%= f.label :name %></h5>
  <%= f.text_field :name, autocomplete: "off" %>
  <br>
  <br>
  <h5><%= f.label :username %></h5>
  <%= f.text_field :username, autocomplete: "off"%>
  <br>
  <br>
  <h5><%= f.label :password %></h5>
  <%= f.password_field :password, autocomplete: "off" %>
  <br>
  <br>
  <h5><%= f.label :bio %></h5>
  <%= f.text_area :bio, size: "20x6", autocomplete: "off"  %>
  <br>
  <br>
  <%= f.submit "Create Account"%>
  <% end %>
  <br>
  <br>
  <%= link_to "Already Have An Account?", new_login_path %>
  