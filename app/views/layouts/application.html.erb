<!DOCTYPE html>
<html>
  <head>
    <title>RagingBull</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

  <h1 class="head"><%= image_tag("output-onlinepngtools.png", size: "150x150") %><br>Raging Bull<br><br></h1>
      <ul class="nav">
      <% if @current_investor %>
          <li><%= "Welcome #{@current_investor.name}" %></li>
         <li><%= link_to "Stocks Main Page", stocks_path %></li>
         <li><%= link_to "Current Holdings", portfolios_path %></li>
         <li><%= link_to "Logout", logout_path, method: :delete  %></li>
      <%else%>
        <li><%= link_to "Stocks Main Page", stocks_path %></li>
         <li><%= link_to "Create Account", new_investor_path %></li>
        <li><%= link_to "Login", new_login_path %></li>
      <% end %>
      </ul>
      <br>
  
    <%= yield %>
  
  </body>
</html>
